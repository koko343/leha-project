<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script type="text/javascript" src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" href="~/Content/main.css" />
</head>
<body>
    <div class="header">
        <div class="navbar navbar-default navbar-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="logo-wrapper-collapse logo-style">
                    <a class="logo" href="#">
                        <img src="https://img1.etsystatic.com/114/0/11182740/isla_360x360.21293547_scqvpqvb.jpg" />
                        <div class="logo-header" style="font-size:27px;">
                            Logoplaceholder
                        </div>
                    </a>
                </div>
                <div class="navbar-collapse collapse header-nav">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("HOME", "Index", "Home")</li>
                        <li>@Html.ActionLink("ABOUT", "About", "Home")</li>
                        <li>@Html.ActionLink("CART", "Cart", "Home")</li>
                    </ul>
                </div>
                <div class="logo-wrapper logo-style">
                    <a class="logo" href="#">
                        <img src="https://img1.etsystatic.com/114/0/11182740/isla_360x360.21293547_scqvpqvb.jpg" />
                        <div class="logo-header" style="font-size:42px;">
                            Logoplaceholder
                        </div>
                    </a>
                </div>
                <div class="wrapper">
                    <ul class="filter">
                        <li>@Html.ActionLink("ALL ITEMS", "AllItems", "Home")</li>
                        <li>@Html.ActionLink("ORIGINAL PAINTINGS", "OrigPaintings", "Home")</li>
                        <li>@Html.ActionLink("SALE", "Sale", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderSection("Body")
    </div>

    <nav class="navbar navbar-inverse navbar-bottom">
        <div class="container-fluid">
            <ul class="nav navbar-nav footer-nav">
                <li>@Html.ActionLink("HOME", "AllItems", "Home")</li>
                <li>@Html.ActionLink("ABOUT", "OrigPaintings", "Home")</li>
                <li>@Html.ActionLink("CONTAC US", "Sale", "Home")</li>
                <li>@Html.ActionLink("SHIPPING NAD POLICES", "Sale", "Home")</li>
            </ul>
        </div>
    </nav>
    <nav class="navbar navbar-default navbar-bottom">
        <div class="container-fluid rights">
            ALL RIGHTS RESERVED | POWERED BY ILYAS343
        </div>
    </nav>
    @RenderSection("scripts", false)
</body>
</html>

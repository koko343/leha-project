@model LehaProjectMVC.Core.Entities.Product
@Page ValidateRequest=false

@{
    ViewBag.Title = "ItemPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Body{
    
    <div>
        <div class="row item-wrapper">
            <div class="col-md-8 col-md-offset-2">
                <div class="col-md-6 item-image-wrapper">
                    <div class="item-image" style="background-image:url(@Model.Image.ImageUrl)"></div>
                </div>

                <div class="col-md-5 item-info">
                    <div class="item-title">
                        @Model.Name
                    </div>
                    <div class="item-description">
                        @Model.Description
                    </div>
                    <div class="item-price">
                        <div class="col-md-6 col-xs-6" style="padding:0; margin:0; font-weight:600">Price : @Model.Price $</div>

                        <div class="col-md-6 col-xs-6"><button type="button">Add To Busket</button></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
    
    
    }

